{
  "app-id": "dev.skillless.Scanline",
  "runtime": "org.gnome.Platform",
  "runtime-version": "49",
  "sdk": "org.gnome.Sdk",
  "sdk-extensions": ["org.freedesktop.Sdk.Extension.golang"],
  "command": "scanline",
  "finish-args": [
    "--share=network",
    "--share=ipc",
    "--socket=wayland",
    "--socket=fallback-x11",
    "--socket=pulseaudio",
    "--device=dri"
  ],
  "build-options": {
    "env": {
      "GOBIN": "/app/bin",
      "GOROOT": "/usr/lib/sdk/golang"
    }
  },
  "modules": [
    {
      "name": "scanline",
      "buildsystem": "simple",
      "build-commands": [
        "$GOROOT/bin/go build -ldflags=\"-X github.com/0skillallluck/scanline/app/dialogs/about.Commit=$(git describe --tags --long --abbrev=7 2>/dev/null || git rev-parse HEAD 2>/dev/null) -w -s\" -gcflags=all=-l -trimpath -o scanline main.go",
        "install -Dm00755 scanline $FLATPAK_DEST/bin/scanline",
        "install -Dm00644 assets/icons/app.svg $FLATPAK_DEST/share/icons/hicolor/scalable/apps/$FLATPAK_ID.svg",
        "install -Dm00644 assets/icons/app-symbolic.svg $FLATPAK_DEST/share/icons/hicolor/symbolic/apps/$FLATPAK_ID-symbolic.svg",
        "install -Dm00644 assets/meta/$FLATPAK_ID.desktop $FLATPAK_DEST/share/applications/$FLATPAK_ID.desktop",
        "install -Dm00644 assets/meta/$FLATPAK_ID.metainfo.xml $FLATPAK_DEST/share/metainfo/$FLATPAK_ID.metainfo.xml",
        "install -Dm00644 assets/meta/$FLATPAK_ID.gschema.xml $FLATPAK_DEST/share/glib-2.0/schemas/$FLATPAK_ID.gschema.xml",
        "glib-compile-schemas $FLATPAK_DEST/share/glib-2.0/schemas"
      ],
      "sources": [
        "assets/meta/go.mod.yml",
        {
          "type": "dir",
          "path": "."
        }
      ]
    }
  ]
}
